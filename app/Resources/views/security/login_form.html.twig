{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body_id 'login' %}

{% block main %}

	<div class="container">

		<div class="row">
		    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
		    	{% if error %}
			        <div class="alert alert-danger">
			            <span class="glyphicon glyphicon-remove"></span> {{ error.messageKey|trans(error.messageData, 'security') }}
			        </div>
			    {% endif %}

				<form role="form" action="{{ path('security_login') }}" method="post">
					<fieldset>
						<h2>Please Sign In</h2>
						<hr class="colorgraph">
						<div class="form-group">
		                    <input type="email" name="_username" id="email" class="form-control input-lg" placeholder="Email Address" value="{% if last_username %}{{ last_username }}{% endif %}">
						</div>						
						<div class="form-group">
		                    <input type="password" name="_password" id="password" class="form-control input-lg" placeholder="Password">
						</div>
						<span class="button-checkbox">
							<button type="button" class="btn" data-color="info">Remember Me</button>
		                    <input type="checkbox" name="remember_me" id="remember_me" checked="checked" class="hidden">
							<a href="" class="btn btn-link pull-right">Forgot Password?</a>
						</span>
						<hr class="colorgraph">
						<div class="row">
							<div class="col-xs-6 col-sm-6 col-md-6">
								<a href="{{ path('user_registration') }}" class="btn btn-lg btn-primary btn-block">Register</a>
							</div>
							<div class="col-xs-6 col-sm-6 col-md-6">
								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
		                        <input type="submit" class="btn btn-lg btn-success btn-block" value="Sign In">
							</div>							
						</div>
					</fieldset>
				</form>
			</div>
		</div>

	</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('js/login.js') }}"> </script>
{% endblock %}
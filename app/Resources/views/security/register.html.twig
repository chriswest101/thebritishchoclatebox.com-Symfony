{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body_id 'login' %}

{% block main %}

	<div class="container">

		<div class="row">
		    <div class="{% if success_register %}col-xs-12 col-sm-12 col-md-12{% else %}col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3{% endif %}">
		    	{% if success_register %}
		    		<div id="w">
    					<div id="content">
							<div class="notify successbox">
								<h1>Success!</h1>
								<span class="alerticon"><img src="{{ asset('images/check.png') }}" alt="checkmark" /></span>
								<p>Thanks so much for signing up. You can now login to our site by clicking this <a href="{{ path('security_login') }}">link</a></p>
							</div>
						</div>
					</div>
		    	{% else %}
		    		{% if errors %}
				        <div class="alert alert-danger">
				        	There were some errors with your submission. Please try again.<br/><br/>
				        	{% for error in errors %}
				            	<span class="glyphicon glyphicon-remove"></span> {{ error }}<br/>
				        	{% endfor %}
				        </div>
				    {% endif %}

					<form role="form" method="post" action="{{ path('user_registration') }}" class="registerForm" autocomplete="off">
						<h2>Please Sign Up <small>It's free and always will be.</small></h2>
						<hr class="colorgraph">
						<div class="row">
							<div class="col-xs-12 col-sm-12 col-md-12">
								<div class="form-group">
			                        <input type="text" name="name" id="name" class="form-control input-lg" placeholder="Full Name" tabindex="1">
								</div>
							</div>
						</div>
						<div class="form-group">
							<input type="email" name="email" id="email" class="form-control input-lg" placeholder="Email Address" tabindex="4">
						</div>
						<div class="form-group" style="display:none;" id="passwordError">
		                    <div class="alert alert-danger">
		                    	<span class="glyphicon glyphicon-warning-sign"></span> Your password does not match please try again.
		                    </div>
						</div>
						<div class="row">
							<div class="col-xs-12 col-sm-6 col-md-6">
								<div class="form-group">
									<input type="password" name="password" id="password" class="form-control input-lg" placeholder="Password" tabindex="5">
								</div>
							</div>
							<div class="col-xs-12 col-sm-6 col-md-6">
								<div class="form-group">
									<input type="password" name="password_confirmation" id="password_confirmation" class="form-control input-lg" placeholder="Confirm Password" tabindex="6">
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-xs-4 col-sm-3 col-md-3">
								<span class="button-checkbox">
									<button type="button" class="btn" data-color="info" tabindex="7">I Agree</button>
			                        <input type="checkbox" name="t_and_c" id="t_and_c" class="hidden" value="1" checked="">
								</span>
							</div>
							<div class="col-xs-8 col-sm-9 col-md-9">
								 By clicking <strong class="label label-success">Register</strong>, you agree to the Terms and Conditions set out by this site, including our Cookie Use.
							</div>
						</div>
						
						<hr class="colorgraph">
						<div class="row">
							<div class="col-xs-12 col-md-6"><!-- <a href="{{ path('security_login') }}" class="btn btn-primary btn-block btn-lg">Sign In</a> --></div>
							<div class="col-xs-12 col-md-6"><input type="submit" value="Register" class="btn btn-success btn-block btn-lg" tabindex="7"></div>
						</div>
					</form>
				{% endif %}

			</div>
		</div>

	</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('js/register.js') }}"> </script>
{% endblock %}
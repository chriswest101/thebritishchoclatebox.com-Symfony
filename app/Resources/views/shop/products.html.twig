{% extends 'base.html.twig' %}

{% block body_id 'homepage' %}

{% block main %}

    <!-- content-section-starts-here -->
    <div class="container">        

        <div class="row">            
            <div class="col-md-4">
                {% include 'shop/categories.html.twig' %}
            </div>
            <div class="col-md-8">
                <div class="products-grid">
                    <header>
                        <h3 class="head text-center">{% if category %}{{ category }}{% else %}Latest Products{% endif %}</h3>
                    </header>
                    {% for product in products %}
                        {% include 'shop/products_container.html.twig' %}
                    {% endfor %}
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('css/nutritionfacts.css') }}">
{% endblock %}

{% block body_id 'product' %}

{% block main %}

    <!-- content-section-starts-here -->
    <div class="container">

        <div class="row">
            <div class="col-md-7 col-xs-12 text-center">
                <img src="{{ asset("images/products/") ~ product.imagePath  }}" alt="" />
            </div>
            <div class="col-md-5 col-xs-12">
                    <header>
                        <h3 class="head">{{ product.name }}</h3>
                    </header>
                    <div>
                        <p>
                            {{ product.description }}
                        </p>
                        <p>
                            {% include 'shop/nutrition_label.html.twig' %}
                        </p>
                        <div class="row">
                            <div class="col-md-6 col-xs-6"></div>
                            <div class="col-md-6 col-xs-6">
                                <div class="prices text-right">
                                    {% include 'shop/product_prices.html.twig' %}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-xs-6"></div>
                            <div class="col-md-6 col-xs-6">
                                {% include 'shop/cart_add.html.twig' %}
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                
            </div>
        </div>
    </div>
{% endblock %}
